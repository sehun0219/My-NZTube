// Purpose: Header partial for the site
header 
  a(href="/").header__logo 
    span.header__logo__text #{siteName}
    i.fab.fa-youtube  
  nav
    ul 
      li 
          a(href="/search")
            i.fas.fa-search
      if loggedIn
        li 
          a(href=`/users/${loggedInUser._id}`)
            if loggedInUser.avatarUrl === ""
              span 😁
            else
              if loggedInUser.avatarUrl
                if loggedInUser.avatarUrl.includes("github")
                  img.header__avatar(src=loggedInUser.avatarUrl)
                else 
                  img.header__avatar(src=loggedInUser.avatarUrl)
            
        li 
          a(href="/users/edit") Edit profile
        li 
          a(href="/videos/upload") Upload Video 
        li 
          a(href="/users/logout") Logout
        
      else 
        li 
          a(href="/join").header__btn Join
        li 
          a(href="/login").header__btn Login      
      